%script{:src=>'/javascripts/bindings/post_a_book.js', :type=>"text/javascript"}
%script{:src=>'/javascripts/lib/books.js', :type=>"text/javascript"}
%link{:href=>'/stylesheets/post_a_book.css', :media=>'screen, projection' , :rel=>"stylesheet", :type=>"text/css"}

.post_a_book
  .header
    Enter book details 
  = render :partial => 'book_form', :locals =>{ :for_action => :add, :url => {:action => 'add'}}

.posted_books
  .header
    Posted books
  - @books.each do |book|
    .book
      .thumbnail
      .content-middle
        .row.title
          .label
          .value
            = book.name
        .row.isbn
          .label
            Isbn :
        .row.author
          .label
            Author(s) :
          .value
            = book.author
        .row.tags
          .label
            Tags :
          .value
            = book.tag_list
      .content-right
        .row.mrp
          .label
            Mrp : Rs
          .value
            = book.mrp
        .row.sale_price
          .label
            Sale Price : Rs
          .value
            = book.sale_price
        .row
          .edit_link.label
            %a{:href=>"#",:url_to_post => "#{book_update_url(book.id)}"}
              edit
            |
          .delete_link.label
            %a{:href=>"#{book_delete_url(book.id)}"}
              delete

